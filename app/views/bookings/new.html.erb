<h1>Book a Table</h1>
<% if current_user %>
    <%= form_for ([@restaurant, @booking]) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> booking could not be made:</h2>

     
      <% @booking.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
     
    </div>
  <% end %>

        <div class="field">
            <%= f.label :date %>
            <%= f.date_select :date %>
        </div>
        <div class="field">
            <%= f.label :time %>
            <%= f.time_select :time, {ampm: true, minute_step: 30} %>
        </div>
        <div class="field">
            <%= f.label :size %>
            <%= f.text_field :size %>
        </div>
        <%= f.submit %>
    <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
<% end %>