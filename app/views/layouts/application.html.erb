<!DOCTYPE html>
<html>
<head>
  <title>SeatyourselfApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="headwrapper">

        <p class="userinfo">

            <% if current_user %>
                Signed in as <%= current_user.email %>. | <%= link_to "Profile", current_user %> | <%= link_to "My Bookings", restaurant_bookings_path(current_user) %>  | <%= link_to "Log out", session_path('current'), :method => :delete %>
            <% else %>
                <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", signup_path %>
            <% end %>
        </p>

    


        <div id="header">
            <h1> Seat Yourself</h1>
            <div class ="nav">
                <%= link_to "Home", "/" %>   <%= link_to "Categories", categories_path %> 
                
            </div>
        </div>
    </div>


<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<%= yield %>

</body>
</html>
