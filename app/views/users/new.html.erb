<h1>Sign Up</h1>

<%= form_for (@user) do |f| %>
    <%= f.hidden_field :kind, :value => "user" %>

    <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="field">
        <%= f.label :avatar%><br/>
        <%= f.file_field :avatar %>
    </div>
<div class="actions"><%= submit_tag "Save" %></div>
<% end %>